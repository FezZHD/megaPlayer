<Window x:Name="mainWindow" x:Class="Player.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Player"
        mc:Ignorable="d"
         TextElement.Foreground="{DynamicResource MaterialDesignBody}"
         Background="White"
         FontFamily="pack://application:,,,/MaterialDesignThemes.Wpf;component/Resources/Roboto/#Roboto"
        Title="Player" Height="704" Width="904" WindowStartupLocation="CenterScreen" ScrollViewer.VerticalScrollBarVisibility="Disabled" MinWidth="500" MinHeight="500">
    <Grid x:Name="mainButtons" Margin="0,456,0,0" VerticalAlignment="Bottom" Background="#FF1E7B97">
        <ProgressBar x:Name="timeBar" Height="7" Background="#FF59ACE6" Width="auto" Margin="10,0,10,30" Grid.ColumnSpan="2" VerticalAlignment="Bottom"/>
        <Button x:Name="playButton" Style="{StaticResource MaterialDesignFloatingActionButton}" Margin="393,51,390,67" MaxWidth="200" MaxHeight="200" Width="50" Height="50" BorderBrush="{x:Null}" Foreground="{x:Null}">
            <Button.Background>
                <ImageBrush ImageSource="images/playArrow.png"/>
            </Button.Background>
        </Button>
    </Grid>
</Window>
